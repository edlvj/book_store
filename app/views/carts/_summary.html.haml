.general-order-wrap
  .row
    .col-sm-4
      .input-group.general-input-group
        %label.font-weight-light= t('cart.enter_coupon')
        = fields_for :coupon, @coupon_form do |coupon_field|
          = coupon_field.text_field :code, class: "form-control mb-30", placeholder: t('cart.enter_coupon')
        %div
          = submit_tag t('cart.update_cart'), class: "btn btn-primary mb-15 res-block"
    .col-sm-8
      .res-mr-200.text-center.general-text-right
        %p.in-gold-500.font-18= t('cart.order_summary')
        %table.general-summary-table.general-summary-table-right.general-text-right
          %tr
            %td
              %p.font-16= t('cart.subtotal_pre') 
            %td
              %p.font-16= price_in_currency(current_order.sub_total)
          %tr
            %td
              %p.font-16= t('cart.coupon') 
            %td
              %p.font-16= price_in_currency(current_order.coupon_total)
          %tr
            %td
              %strong.font-18= t('cart.order_total') 
            %td
              %strong.font-18= price_in_currency(current_order.total_cost)