.row.mb-20
  .col-sm-3
    %h3.general-subtitle= t('checkout.shipping_address')
    = render 'checkout/address_panel', order: current_order
  .col-sm-3
    %h3.general-subtitle= t('checkout.billing_address')
    = render 'checkout/address_panel', order: current_order
  .col-sm-3
    %h3.general-subtitle= t('confirm.shipments')
    %p.general-address
      = current_order.shipping_id
      %span.general-edit= edit_link(:address) if local_assigns[:edit]
  .col-sm-3
    %h3.general-subtitle= t('confirm.payment_information')
    %p.general-address
      = current_order.credit_card.number
      %span.general-edit= edit_link(:payment) if local_assigns[:edit]
      %br
      = current_order.credit_card.expiration_date