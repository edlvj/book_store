%main.container
  .text-center
    %h3.general-login-title Set new password
    = devise_error_messages!
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "general-form" }) do |f|
    .form-group.mb-30
      = f.label :password, "Type a new Password", class: "control-label font-weight-light"
      = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Type a new Password"
    .form-group.mb-40
      = f.label :password_confirmation, "Confirm new password", class: "control-label font-weight-light"
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password"
    = f.submit "Change", class: "btn btn-default center-block mb-20"
