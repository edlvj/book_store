%main.container
  = render 'slider', latests: @presenter.lastest
.container
  .jumbotron.text-center.mb-0
    %h2.h1= t("store.welcome")
    .mb-res-50
      %p.in-grey-600= t("store.describe")
    = link_to t("store.get_started"), books_path(category: @presenter.category), class: "btn btn-default"
  .mb-35
    %h3= t("store.best_selling")
    .row
      - @presenter.bestsellers.each do |item|
        = render 'books/book', book: item